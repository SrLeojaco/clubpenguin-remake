extends ../layout

block content

	style.
		.hide { display: none}
		.client .form-control {
		padding:0;
		font-size: 16px;
		height: auto;
		}
		@media (max-width: 767.98px) {
		body { padding-top: 0; }
		.client .col { padding: 0; }
		}
		// Client
	.client.container-fluid
		.row.justify-content-center
			.col
				div
					canvas#stage(width='850', height='480')
				.input-group
					input#inputMessage.form-control.px-2(type='text', maxlength='48')
					span.input-group-btn
						button.btn.btn-primary.chat-btn Send
	.menu.container.pt-4
		.row.justify-content-center
			.col-3
				button.btn.btn-link(onclick='world.logout()') Log out
				
	

	
	script(src='/js/lib/jquery.min.js')
	script(src='/js/lib/popper.min.js')
	script(src='/js/lib/bootstrap.min.js')
	script(src='/js/main.js')
	script(src='/socket.io/socket.io.js')
	script(src='https://code.createjs.com/1.0.0/createjs.min.js')
	
	script(src='/media/critters/hamster.js')
	
